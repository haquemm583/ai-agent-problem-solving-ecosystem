# MA-GET Environment Variables
# Copy this file to .env and add your actual keys

# OpenAI API Key for LLM-powered agents
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenWeatherMap API Key for real weather data
# Get yours at: https://openweathermap.org/api (free tier: 1000 calls/day)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Optional: Set to "false" to use rule-based agents instead of LLM
USE_LLM=true

# Optional: OpenAI model to use
OPENAI_MODEL=gpt-4o-mini

# Optional: Temperature for LLM (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.7
